{
  "name": "node-micro-db",
  "version": "1.0.2",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib/index.d.ts",
  "repository": "https://github.com/fabiankachlock/micro-db",
  "author": "Fabian Kachlock",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "test:coverage": "jest --config jestconfig.json --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "preversion": "yarn test && yarn lint && yarn build",
    "version": "yarn format && git add -A src",
    "postversion": "git push --tags && npm publish --access=public && git push && echo \"Successfully released version $npm_package_version!\""
  },
  "lint-staged": {
    "src/**/!(*test).ts": [
      "yarn lint"
    ],
    "src/**/*.ts": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@types/cron": "^1.7.3",
    "@types/jest": "^27.0.1",
    "@types/uuid": "^8.3.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cron": "^1.8.2",
    "uuid": "^8.3.2"
  }
}
